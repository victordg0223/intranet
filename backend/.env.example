# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/intranet_dev?schema=public"

# For Neon (production)
# DATABASE_URL="postgresql://username:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require"

# Application Configuration
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your_client_id_here
AUTH0_CLIENT_SECRET=your_client_secret_here
AUTH0_AUDIENCE=https://your-api-identifier

# Meilisearch Configuration
MEILI_HOST=http://localhost:7700
MEILI_MASTER_KEY=masterKey123456789

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Sentry Configuration
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# InfinityPay Configuration
INFINITYPAY_API_KEY=your_infinitypay_api_key_here
INFINITYPAY_BASE_URL=https://api.infinitypay.io
INFINITYPAY_WEBHOOK_SECRET=your_webhook_secret_here

# AWS CloudWatch (optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
CLOUDWATCH_LOG_GROUP=intranet-backend
