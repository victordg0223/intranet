# Database
DATABASE_URL=postgresql://user:password@localhost:5432/intranet_db

# Auth0
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your_client_id
AUTH0_CLIENT_SECRET=your_client_secret
AUTH0_AUDIENCE=your_api_audience

# Meilisearch
MEILI_HOST=http://localhost:7700
MEILI_MASTER_KEY=your_master_key

# Sentry
SENTRY_DSN=https://your_key@sentry.io/your_project
SENTRY_ENVIRONMENT=development

# InfinityPay (Billing)
INFINITYPAY_API_KEY=your_api_key
INFINITYPAY_API_URL=https://api.infinitypay.io
INFINITYPAY_WEBHOOK_SECRET=your_webhook_secret

# Vercel (for deployment)
VERCEL_TOKEN=your_vercel_token
VERCEL_PROJECT_ID=your_project_id
VERCEL_ORG_ID=your_org_id

# GitHub Container Registry (for Docker images)
GHCR_TOKEN=your_github_token

# General
NODE_ENV=development
PORT=3000
BACKEND_PORT=4000
